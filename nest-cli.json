{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "monorepo": true,
  "root": "apps/gateway",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "credentials": {
      "type": "application",
      "root": "apps/credentials",
      "entryFile": "main",
      "sourceRoot": "apps/credentials/src",
      "compilerOptions": {
        "tsConfigPath": "apps/credentials/tsconfig.app.json"
      }
    },
    "db-access": {
      "type": "application",
      "root": "apps/db-access",
      "entryFile": "main",
      "sourceRoot": "apps/db-access/src",
      "compilerOptions": {
        "tsConfigPath": "apps/db-access/tsconfig.app.json"
      }
    },
    "microservice-response-handler": {
      "type": "library",
      "root": "libs/microservice-response-handler",
      "entryFile": "index",
      "sourceRoot": "libs/microservice-response-handler/src",
      "compilerOptions": {
        "tsConfigPath": "libs/microservice-response-handler/tsconfig.lib.json"
      }
    }
  }
}